<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/optionbackm"
    tools:context="com.example.muhaimenulislam01521209669.allinonecalculator.Option">

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/calc"
        android:background="@drawable/simple_button"
        android:onClick="onCalc"
        android:clickable="true"
        android:layout_below="@+id/textView19"
        android:layout_alignLeft="@+id/age"
        android:layout_alignStart="@+id/age" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/age"
        android:background="@drawable/age_button"
        android:layout_below="@+id/calc"
        android:onClick="onAge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/bmi"
        android:background="@drawable/bmi_butt"
        android:layout_below="@+id/age"
        android:onClick="onBMI"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/love"
        android:layout_marginTop="32dp"
        android:onClick="onLove"
        android:background="@drawable/love_button"
        android:layout_below="@+id/bmi"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/button9"
        android:onClick="onCredit"
        android:background="@drawable/abot"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:background="@drawable/choose"
        android:id="@+id/textView19"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
