<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bmi_calculator"
    tools:context="com.example.muhaimenulislam01521209669.allinonecalculator.BMI">

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Standard (English)"
        android:id="@+id/button3"
        android:onClick="onStand"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="214dp" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Metric"
        android:id="@+id/button4"
        android:onClick="onMet"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Body mass index (BMI) is a measure of body fat based on height and weight that applies to adult men and women.\n\n\n\n* Tap your choice to compute BMI using standard or metric measures"
        android:id="@+id/textView"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BMI Calculator"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="#175c00"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
